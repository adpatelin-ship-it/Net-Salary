#include <stdio.h>

int main() {
    float grossSalary, allowances, deductions, netSalary;

    // Input gross salary
    printf("Enter the gross salary: ");
    scanf("%f", &grossSalary);

    // Calculate allowances and deductions based on gross salary
    if (grossSalary > 10000) {
        allowances = 0.10f * grossSalary;
        deductions = 0.03f * grossSalary;
    } else if (grossSalary > 5000) {
        allowances = 0.07f * grossSalary;
        deductions = 0.02f * grossSalary;
    } else {
        // If gross salary <= 5000, no allowances and deductions defined in your prompt
        allowances = 0;
        deductions = 0;
    }

    // Calculate net salary
    netSalary = grossSalary + allowances - deductions;

    // Display result
    printf("Gross Salary: %.2f\n", grossSalary);
    printf("Allowances: %.2f\n", allowances);
    printf("Deductions: %.2f\n", deductions);
    printf("Net Salary: %.2f\n", netSalary);

    return 0;
}

